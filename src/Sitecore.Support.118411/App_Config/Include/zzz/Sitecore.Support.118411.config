<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>
      <settings>
        <!--  FORCE CLIENT LANGUAGE ON LOGIN
          true - User Client Language is forced for use after login
          false - if specified, language from query string is used. if not, User Client Language is used.
        -->
        <setting name="ForceClientLanguageOnLogin" value="false" />
      </settings>
  </sitecore>
</configuration>